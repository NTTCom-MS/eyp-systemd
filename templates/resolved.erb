[Resolve]

<% if @dns.any? -%>
DNS=<%= @dns.join(' ') %>
<% end -%>
<% if @fallback_dns.any? -%>
FallbackDNS=<%= @fallback_dns.join(' ') %>
<% end -%>
<% if @domains.any? -%>
Domains=<%= @domains.join(' ') %>
<% end -%>
#LLMNR=no
#MulticastDNS=no
DNSSEC=<%= scope.function_bool2yesno([@dnssec]) %>
Cache=<%= scope.function_bool2yesno([@cache]) %>
DNSStubListener=<%= scope.function_bool2yesno([@dns_stub_listener]) %>
